@using PW3.TPFinal.Negocio.Modelos.Data
@model List<EventoModel>

@{
    Layout = "~/Views/Shared/Anonimo/_Anonimo.cshtml";
    ViewData["Title"] = "Eventos";
}
<section class="seccion-pagina bg-smoke py-10">
    <div class="container">
        <div class="row">
            <div class="text-center">
                <h1 class="text-uppercase font-weight-bold position-relative">
                    BIENVENIDO
                </h1>
                <p class="text-center">Aqui tiene una lista de los ultimos eventos!</p>
            </div>

            <partial name="/Views/Shared/_Message_Bar.cshtml" />

            @foreach (var evento in Model)
            {
                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="card card-hover">
                        <div href="single-package-right-sidebar.html" class="position-relative">
                            <img class="card-img-top" src="@Url.Content($"~/Fotos/{evento.Foto}")" alt="Card image cap">
                        </div>
                        <div class="card-body px-4">
                            <h5>
                                <a href="single-package-right-sidebar.html" class="card-title text-uppercase">@evento.Nombre</a>
                            </h5>
                            <p class="mb-5">
                                Cantidad de Comensales: @evento.CantidadComensales
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="mb-0 text-capitalize">Precio</p>
                                    <h3 class="text-primary">$@evento.Precio</h3>
                                </div>
                                <div>
                                    <p class="mb-0 text-capitalize">Puntuacion</p>
                                    <h3 class="text-primary">@evento.Puntuacion</h3>
                                </div>
                                <div>
                                    <a href="/Evento/@evento.IdEvento/Detalle" class="btn btn-xs btn-outline-secondary text-uppercase">SELECCIONAR</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
