@using PW3.TPFinal.Negocio.Modelos.Data
@model EventoModel

@{
    Layout = "~/Views/Shared/Anonimo/_Anonimo.cshtml";
    ViewData["Title"] = "Eventos";
}
<section class="seccion-pagina py-10">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="text-center">
                    <h1 class="text-uppercase font-weight-bold position-relative">
                        @Model.Nombre
                    </h1>
                    <p class="text-center">Aqui tiene el detalle del evento!</p>
                </div>

                <partial name="/Views/Shared/_Message_Bar.cshtml" />
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="NombreCocinero">Cocinero</label>
                    <input type="text" asp-for="NombreCocinero" class="form-control border-0 bg-smoke" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="CantidadComensales">Cantidad de Comensales</label>
                    <input type="text" asp-for="CantidadComensales" class="form-control border-0 bg-smoke" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="Precio">Precio</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-gray-dark text-white">$</span>
                        <input type="number" asp-for="Precio" class="form-control border-0 bg-smoke" min="0.00" max="10000.00" step="0.01" readonly>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Fecha">Fecha</label>
                    <input type="text" asp-for="Fecha" class="form-control border-0 bg-smoke" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="Ubicacion">Ubicacion</label>
                    <input type="text" asp-for="Ubicacion" class="form-control border-0 bg-smoke" readonly>
                </div>
            </div>
        </div>
        </div>

