@using PW3.TPFinal.Comun.Modelos;
@model AgregarRecetaModel;

@{
    Layout = "Cocinero/_Cocinero";
    ViewData["Title"] = "Recetas";
}
<section class="py-10">
    <div class="container">
        <h1 class="text-uppercase font-weight-bold">Nueva Receta</h1>

        <form asp-action="Recetas" asp-controller="Cocineros" method="post">
            <div class="row">
                @*    Si hubo un error al guardar el usuario, muestro mensaje*@
                @{ if (!string.IsNullOrWhiteSpace(@ViewBag.Mensaje))
                    {
                        <div class="col-lg-12">
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @ViewBag.Mensaje
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    }
                }

            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Nombre">Nombre</label>
                    <input type="text" asp-for="Nombre" class="form-control border-0 bg-smoke">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdTipoReceta">Tipo</label>
                    <input type="number" asp-for="IdTipoReceta" class="form-control border-0 bg-smoke">
                    <span asp-validation-for="IdTipoReceta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Ingredientes">Ingredientes</label>
                    <input type="text" asp-for="Ingredientes" class="form-control border-0 bg-smoke">
                    <span asp-validation-for="Ingredientes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TiempoDeCoccion">Tiempo de Coccion</label>
                    <input type="number" asp-for="TiempoDeCoccion" class="form-control border-0 bg-smoke">
                    <span asp-validation-for="TiempoDeCoccion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descripcion">Descripcion</label>
                    <textarea asp-for="Descripcion" class="form-control border-0 bg-smoke"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </div>


                <div class="text-center text-md-start text-lg-left">
                    <button type="submit" class="btn btn-primary text-uppercase">
                        AGREGAR
                    </button>
                </div>
        </form>
    </div>
</section>
